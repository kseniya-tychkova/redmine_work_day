<div class="contextual">
<%= link_to l(:work_new_type), {:controller => 'type', :action => 'new'}, :class => 'icon icon-add' %>
</div>
<table class="list">
  <thead><tr>
  <th><%= l(:work_types)%></th>
  <th></th>
  </tr></thead>
  <tbody>
  <%types = Type.find(:all) if Type%>
  <%if types%>  
 <% for type in types %>
  <tr BGCOLOR="#<%= type.color%>">
  <td><%= link_to type.name, :controller => 'type', :action => 'edit', :id => type.id %></td>
  <td class="buttons">
    <%= link_to(l(:button_delete), {:controller => 'type', :action => 'destroy', :id => type.id },
    															 :method => :post,
    															 :confirm => l(:text_are_you_sure),
    															 :class => 'icon icon-del') %>
  </td>
  </tr>
  <%end%>
  <% end %>
  </tbody>
</table>
